<!-- Modal -->
<div class="modal fade" id="staticBackdrop-Contenedor" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
        <h5 class="modal-title" id="staticBackdropLabel">Agregar Contenedor</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">

            

        <div class="d-flex justify-content-center h-100">
            <!-- Main Content -->
            <div class="col-xs-12 col-lg-12 col-sm-12 col-md-12">
                <form action="/Muestras/agregarContenedor" method="POST" class="RegistrarContenedorForm" id="RegistrarContenedorForm">
                    <input type="hidden" id="_csrf_modal" value="<%= csrfToken %>" >
                    <div class="row">
                        <div class="col-lg-offset-0 col-lg-12 col-md-12 col-xs-12 col-sm-12">
                            <div class="form-floating small">
                                <input type="number" name="NoContenedor" class="form-control text-center" id="NoContenedor">
                                <label for="floatingInputGrid">No Contenedor</label>
                            </div>
                        </div>
        
                        <div class="col-lg-offset-0 col-lg-12 col-md-12 col-xs-12 col-sm-12 small">
                            <div class="form-floating small">
                                <input type="text" name="Clasificacion" class="form-control" id="Clasificacion" required>
                                <label for="floatingInputGrid">Tipo de Contenedor</label>
                            </div>
                            <!-- Mensajes de Verificación -->
                            <p id="errorClasificacion" class="alert alert-danger small ocultar" role="alert"></p>
                            <!-- Fin Mensajes de Verificación -->
                        </div>
                        <% if (locals.errors && errors.Clasificacion) { %>
                            <p class="text-danger small text-start "><%= errors.Clasificacion.msg %></p>
                        <% } %>
                    </div><!--/ Row-->
                </form>
            </div> <!-- /Main Content -->
        </div>

        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
            <button type="submit" class="btn green" id="Registrar">Registrar Contenedor</button>
        </div>
    </div>
    </div>
</div><!-- End Modal -->
