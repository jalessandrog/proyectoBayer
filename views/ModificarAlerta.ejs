<!DOCTYPE html>
<html>
    <%- include('includes/head.ejs') %>
    
    <body>
        <%- include('includes/header.ejs') %>
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <br><br>
                    <p style="text-align: center; font-size: 1.5em;"><strong>Modificar Alarma</strong></p>
                </div>
            </div>
        </div>
        <form action="/AlertasRoles/editar/<%= alerta.idAlerta %>" method="POST" class="EditarAlertasForm">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>" >
            <div class="container-fluid">
                <div class="row">
                    <div class="col-2"></div>
                    <div class="col-8">
                        <div class="table-responsive">
                            <table class="table .table-borderless caption-top align-middle">
                                <thead class="table">
                                    <tr style="text-align: center;">
                                        <th scope="col">Nombre Alera</th>
                                        <th scope="col">Condición (días)*</th>
                                        <th scope="col">Color</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr style="text-align: center;">
                                        <td><input class="form-control" id="NombreAlerta" name="NombreAlerta" placeholder="<%= alerta.NombreAlerta %>"  value="<%= alerta.NombreAlerta %>"></td>
                                        <td><input class="form-control" id="Condicion" name="Condicion" placeholder="<%= alerta.Condicion %> días" value="<%= alerta.Condicion %>"></td>
                                        <td><input type="color" id="Color" name="Color"  title="Elige el color" value="#<%= alerta.Color %>"></td>
                                    </tr>
                                </tbody>
                            </table>
                            <p style="font-size: 0.7em;">*Días previos a la fecha de caducidad</p>
                        </div>
                    </div>
                    <div class="col-2"></div>
                </div>
                <div class="row">
                    <br>
                    <div class="col-3"></div>
                    <div class="col-3">
                        <div style="text-align: right;">
                            <button type="submit" class="boton" id="Registrar-Actualizar">Actualizar Infromación</button>
                        </div>
                    </div>
                    <div class="col-3">
                        <div style="text-align: left;">
                            <a style="font-size: 1em;" class="btn green" href="/AlertasRoles" role="button">Eliminar Alarma</a>
                        </div>
                    </div>
                    <div class="col-3"></div>
                </div>
            </div>
        </form>
        
    </body>
</html>