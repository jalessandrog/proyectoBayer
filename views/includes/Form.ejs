
            <input type="hidden" name="_csrf" value="<%= csrfToken %>" >
            <div class="row">
                <div class="col-lg-offset-0 col-lg-12 col-xs-12 col-sm-12">
                    <div class="form-floating">
                        <input type="text" name="CodigoMuestra" class="form-control" id="CodigoMuestra" placeholder="Código de Muestra">
                        <label for="floatingInputGrid">Código de Muestra</label>
                    </div>
                </div>

                <div class="col-lg-offset-0 col-lg-12 col-xs-12 col-sm-12">
                    <div class="form-floating">
                        <input type="text" name="SP" class="form-control" id="SP" placeholder="SP de Muestra">
                        <label for="floatingInputGrid">SP de Muestra</label>
                    </div>
                </div>

                <div class="col-lg-offset-0 col-lg-12 col-xs-12 col-sm-12">
                    <div class="form-floating">
                        <input type="text" name="NombreMuestra" class="form-control" id="NombreMuestra" placeholder="Nombre de Muestra">
                        <label for="floatingInputGrid">Nombre de Muestra</label>
                    </div>
                </div>
                <div class="col-lg-offset-0 col-lg-12 col-xs-12 col-sm-12">
                    <select class="form-select" name="UnidadMedida" id="UnidadMedida" required>
                        <option selected value="">Unidad de medida</option>
                        <option value="Lt">Litros</option>
                        <option value="Ml">Militros</option>
                    </select>
                </div>
                <div class="col-lg-offset-0 col-lg-12 col-xs-12 col-sm-12">
                    <div class="form-floating small">
                        <input type="number" name="Cantidad" class="form-control" id="Cantidad" placeholder="Cantidad">
                        <label for="floatingInputGrid">Cantidad</label>
                    </div>
                </div>
                <div class="col-lg-offset-0 col-lg-12 col-xs-12 col-sm-12">
                    <div class="form-floating small">
                        <input type="number" name="Concentracion" class="form-control" id="Concentracion" placeholder="Concentracion (%)">
                        <label for="floatingInputGrid">Concentracion (%)</label>
                    </div>
                </div>
                
                <div class="col-lg-offset-0 col-lg-12 col-xs-12 col-sm-12 ">
                    <select class="form-select" name="idTipoDeMuestra" id="idTipoDeMuestra" required>
                        <option selected value="" disabled>Seleccionar Tipo de Muestra</option>
                        <option value="1">Comercial</option>
                        <option value="2">Experimental</option>
                        <option value="3">Estándar Comercial</option>
                    </select>
                </div>
                
                <div class="col-lg-offset-0 col-lg-12 col-xs-12 col-sm-12 mt-2">
                    <select class="form-select" id="CodigoFormulacion" name="CodigoFormulacion" required>
                        <option selected value="">Seleccionar Tipo Formulación</option>
                        <% if (lista_formulaciones.length > 0) { %>
                            <% for (let TipoFormulacion of lista_formulaciones) { %>
                                <option value="<%= TipoFormulacion.CodigoFormulacion %>"><%= TipoFormulacion.CodigoFormulacion %></option>
                            <% } }%>   
                    </select>
                </div>

                <div class="col-lg-offset-0 col-lg-12 col-xs-12 col-sm-12">
                    <div class="form-floating">
                        <input type="text" name="Lote" class="form-control" id="Lote" placeholder="Lote de Muestra" required>
                        <label for="floatingInputGrid">Lote de Muestra</label>
                    </div>
                </div>
                
                <div class="col-lg-offset-0 col-lg-12 col-xs-12 col-sm-12">
                    <select class="form-select" id="UsoMuestra" name="UsoMuestra" required>
                        <option selected value="">Seleccionar Uso de Muestra</option>
                        <option value="Fungicida">Fungicida</option>
                        <option value="Insecticida">Insecticida</option>
                        <option value="Herbicida">Herbicida</option>
                        <option value="Tratamiento de Semilla">Tratamiento de Semilla</option>
                        <option value="Biológico">Biológico</option>
                        <option value="Nematicida">Nematicida</option>
                    </select>
                </div>
                
                <div class="col-lg-offset-0 col-lg-12 col-xs-12 col-sm-12 mt-2">
                    <select class="form-select" id="idContenedor" name="idContenedor" required>
                        <option selected value="">Seleccionar Contenedor</option>
                        <% if (lista_contenedores.length > 0) { %>
                            <% for (let Contenedor of lista_contenedores) { %>
                                <% if (!Contenedor.NoContenedor) { %>
                                    <option value="<%= Contenedor.idContenedor %>"><%= Contenedor.Clasificacion %></option>
                                <% } else {%>
                                <option value="<%= Contenedor.idContenedor %>"><%= Contenedor.Clasificacion %> - Número <%= Contenedor.NoContenedor %></option>
                        <% } } }%>
                    </select>
                </div>

                
                
                <div class="col-lg-offset-0 col-lg-12 col-xs-12 col-sm-12">
                    <div class="form-floating small">
                        <input type="date" name="FechaFabricacion" class="form-control" id="FechaFabricacion" placeholder="Fecha de Fabricación" required>
                        <label for="floatingInputGrid">Fecha de Fabricación</label>
                    </div>
                </div>
                
                <div class="col-lg-offset-0 col-lg-12 col-xs-12 col-sm-12">
                    <div class="form-floating small">
                        <input type="date" name="FechaCaducidad" class="form-control" id="FechaCaducidad" placeholder="Fecha de Caducidad" required>
                        <label for="floatingInputGrid">Fecha de Caducidad</label>
                    </div>
                </div>

                <div class="col-lg-offset-0 col-lg-12 col-xs-12 col-sm-12">
                    <select class="form-select" name="Status" id="Status" required>
                        <option value="1" selected>Activa</option>
                        <option value="0">Inactiva</option>
                    </select>
                </div>

                <div class="col-lg-offset-0 col-lg-12 col-xs-12 col-sm-12 mt-2">
                    <div>
                        <label for="formFileSm" class="form-label">Hoja de Seguridad</label>
                        <input class="form-control form-control-sm" type="file" name="HojaSeguridad" id="formFile">
                    </div>
                </div>
        </div><!--/ Row-->
        <hr>

        <div class="btn-toolbar" role="toolbar" aria-label="Toolbar with button groups">
            <div class="btn-group me-auto"></div>
            <div class="btn-group me-auto" role="group" aria-label="First group">
                <button type="button" class="btn green" data-bs-toggle="modal" data-bs-target="#staticBackdrop-Contenedor">Agregar Nuevo Contenedor</button>
            </div>
            <div class="btn-group me-auto" role="group" aria-label="Second group">
                <button type="button" class="btn green" data-bs-toggle="modal" data-bs-target="#staticBackdrop-Formulacion">Agregar Nuevo Tipo de Formulación</button>
            </div>
        </div>
        <hr>
