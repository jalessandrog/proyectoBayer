                    </select>
                </div>
                <div class="col-lg-offset-0 col-lg-12 col-xs-12 col-sm-12">
                    <div class="form-floating small">
                        <input type="number" name="Cantidad" class="form-control" id="floatingInputGrid" placeholder="Cantidad">
